# Crypto Analysis Bot V3.2 - Environment Variables Template
# =========================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git (only .env.example)

# ======================
# TELEGRAM CONFIGURATION
# ======================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ======================
# CRYPTO API KEYS
# ======================
# Binance API (for real-time data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# CoinGecko API (for additional data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Alternative exchanges (optional)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# ======================
# BOT CONFIGURATION
# ======================
# Bot operation mode
BOT_MODE=production  # production, development, testing

# Analysis settings
ANALYSIS_INTERVAL=7200  # seconds (2 hours = 7200)
DAILY_SUMMARY_TIME=10:00  # 24h format
TIMEZONE=Asia/Tehran

# Signal thresholds
STRONG_SIGNAL_THRESHOLD=0.7
VOLUME_SPIKE_THRESHOLD=2.0
PRICE_CHANGE_THRESHOLD=5.0

# Risk management
MAX_SIGNALS_PER_DAY=10
COOLDOWN_PERIOD=3600  # 1 hour between same signals

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=sqlite:///crypto_bot.db
# For PostgreSQL: postgresql://username:password@localhost/crypto_bot

# ======================
# CLOUD DEPLOYMENT
# ======================
# Google Cloud settings
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ======================
# SECURITY & MONITORING
# ======================
# API rate limiting
API_RATE_LIMIT=100  # requests per minute
REQUEST_TIMEOUT=30  # seconds

# Logging level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Security
SECRET_KEY=your_flask_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# ======================
# ADVANCED FEATURES
# ======================
# Machine Learning
ML_MODEL_PATH=models/
ENABLE_ML_PREDICTIONS=true
ML_RETRAIN_INTERVAL=86400  # 24 hours

# Technical Analysis
ENABLE_ADVANCED_TA=true
TA_INDICATORS=RSI,MACD,BB,EMA,SMA
CHART_TIMEFRAMES=1h,4h,1d

# Backtesting
BACKTEST_PERIOD=30  # days
ENABLE_BACKTESTING=true

# ======================
# NOTIFICATIONS
# ======================
# Email alerts (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourdomain.com

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Flask settings
FLASK_ENV=production  # development, production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# Testing
ENABLE_PAPER_TRADING=true
TEST_MODE=false